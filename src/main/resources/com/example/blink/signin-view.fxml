<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.blink.SignInController">
   <children>
      <ImageView fitHeight="591.0" fitWidth="500.0" layoutY="-91.0" pickOnBounds="true">
         <image>
            <Image url="@../images/bg.jpg" />
         </image>
      </ImageView>
      <VBox fx:id="paneSignIn" alignment="CENTER" prefHeight="500" prefWidth="500" spacing="20.0">
          <padding>
              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
          </padding>
         <children>
            <Label text="Welcome Blink!">
               <font>
                  <Font name="Candara Light" size="48.0" />
               </font></Label>
            <TextField fx:id="username" maxWidth="250.0" minWidth="250.0" prefHeight="26.0" prefWidth="250.0" promptText="Username">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding></TextField>
            <PasswordField fx:id="password" maxWidth="250.0" minWidth="250.0" prefWidth="250.0" promptText="Password">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding></PasswordField>
            <HBox minWidth="200.0" prefHeight="100.0" prefWidth="200.0" />
            <Button fx:id="signIn" maxWidth="70.0" mnemonicParsing="false" onAction="#signIn" style="-fx-background-color: PINK;" text="Sign In">
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
               <font>
                  <Font name="Candara" size="12.0" />
               </font></Button>
            <HBox maxHeight="20.0" maxWidth="150.0" prefHeight="98.0" prefWidth="343.0">
               <children>
                  <Label prefHeight="24.0" prefWidth="81.0" text="No account yet?" textFill="WHITE">
                     <font>
                        <Font name="Candara" size="12.0" />
                     </font></Label>
                  <Hyperlink fx:id="btnSignUp" maxHeight="-Infinity" onAction="#signUp" prefHeight="24.0" prefWidth="50.0" text="Sign Up" />
               </children>
            </HBox>
         </children>
      </VBox>

   </children>
</AnchorPane>
