<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<AnchorPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.blink.SignInController">
   <children>
      <VBox fx:id="paneSignIn" alignment="CENTER" prefHeight="500" prefWidth="500" spacing="20.0">
          <padding>
              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
          </padding>
         <children>
            <Label text="Welcome Blink!" />
            <GridPane prefHeight="49.0" prefWidth="260.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints />
                <RowConstraints maxHeight="50.0" minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="50.0" minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label text="Password: " GridPane.rowIndex="2" />
                  <Label prefWidth="71.0" text="Username: " GridPane.rowIndex="1" />
                  <TextField fx:id="username" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <PasswordField fx:id="password" GridPane.columnIndex="1" GridPane.rowIndex="2" />
               </children>
            </GridPane>
            <HBox prefHeight="100.0" prefWidth="200.0" />
            <Button fx:id="signIn" mnemonicParsing="false" onAction="#signIn" text="Sign In" />
            <Label text="No account yet?" />
            <Button fx:id="signUp" mnemonicParsing="false" onAction="#signUp" text="Sign Up" />
         </children>
      </VBox>
   </children>
</AnchorPane>
