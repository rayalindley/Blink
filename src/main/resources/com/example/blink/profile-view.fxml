<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.blink.ProfileController">
   <children>
       <ImageView fitHeight="591.0" fitWidth="500.0" layoutY="-91.0" pickOnBounds="true">
           <image>
               <Image url="@../images/bg.jpg" />
           </image>
       </ImageView>
      <VBox fx:id="paneProfile" prefHeight="500.0" prefWidth="500.0">
         <children>
            <ToolBar prefHeight="40.0" prefWidth="200.0">
              <items>
                <Button fx:id="btnBack" mnemonicParsing="false" onAction="#backToHome" text="Back" />
                  <Separator prefWidth="168.0" />
                  <Label text="Profile" />
                  <Separator prefWidth="168.0" />
                  <Button fx:id="btnLogOut" mnemonicParsing="false" onAction="#logOut" text="Log Out" />
              </items>
            </ToolBar>
            <GridPane fx:id="profileGrid" alignment="CENTER">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="250.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label text="First Name">
                     <font>
                        <Font name="Candara" size="12.0" />
                     </font></Label>
                  <Label text="Last name" GridPane.rowIndex="1">
                     <font>
                        <Font name="Candara" size="12.0" />
                     </font></Label>
                  <Label text="Email Address" GridPane.rowIndex="2">
                     <font>
                        <Font name="Candara" size="12.0" />
                     </font></Label>
                  <Label text="Username" GridPane.rowIndex="3">
                     <font>
                        <Font name="Candara" size="12.0" />
                     </font></Label>
                  <TextField editable="false" GridPane.columnIndex="1" />
                  <TextField editable="false" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <TextField editable="false" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <TextField editable="false" maxWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
               </children>
               <VBox.margin>
                  <Insets top="30.0" />
               </VBox.margin>
            </GridPane>
            <GridPane alignment="CENTER" maxWidth="50.0" prefHeight="91.0" prefWidth="77.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                   <Button fx:id="btnEdit" alignment="CENTER" contentDisplay="CENTER" onAction="#editProfile" text="Edit" />
                  <Button fx:id="btnSave" mnemonicParsing="false" onAction="#saveProfile" text="Save" visible="false" />
               </children>
            </GridPane>
         </children></VBox>
   </children>
</AnchorPane>
